extends ReactUI

func construct() -> void:
	self.state = {
		"count": 0
	}

func render():
	var count: int = self.state.count

	return (
		<PanelContainer
			anchor_left: 0.0
			anchor_top: 0.0
			anchor_right: 1.0,
			anchor_bottom: 1.0
			key: 1
		>
			<Label
				align: Label.ALIGN_CENTER
				valign: Label.VALIGN_CENTER
				text: "Hello!"
				visible: (count % 2 == 0)
			/>
		</PanelContainer>
	)
