extends ReactGDComponent

func construct() -> void:
	self.state = {
		"click_count": 0
	}

func on_button_pressed() -> void:
	set_state({
		"click_count": self.state.click_count + 1
	})

func render():
	var shake = do_transition(
		shake:x
			peak = 1.4
			target = 1.0
			duration = .2
		append .1
		shake:y
			peak = 1.4
			target = 1.0
			duration = .2
	)

	return (
		<VBoxContainer>
		
			<Button
				text = "Click!"
				rect_scale = shake
			/>

		</VBoxContainer>
	)
